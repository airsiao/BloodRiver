package com.ourgame.mahjong.bloodriver.vo
{
	import com.wecoit.data.HashMap;
	
	/**
	 * 听牌信息
	 * @author SiaoLeon
	 */
	public class TingInfo
	{
		// -------------------------------------------------------------------------------------------------------- 静态常量
		
		// -------------------------------------------------------------------------------------------------------- 静态变量
		
		// -------------------------------------------------------------------------------------------------------- 静态方法
		
		// -------------------------------------------------------------------------------------------------------- 静态函数
		
		// -------------------------------------------------------------------------------------------------------- 属性
		
		private var _drop:Card;
		
		public function get drop():Card
		{
			return this._drop;
		}
		
		private var _tings:HashMap;
		
		public function get tings():HashMap
		{
			return this._tings;
		}
		
		// -------------------------------------------------------------------------------------------------------- 变量
		
		// -------------------------------------------------------------------------------------------------------- 构造
		
		/**
		 * 构造函数
		 */
		public function TingInfo(drop:Card=null)
		{
			this._drop = drop;
			this._tings = new HashMap();
		}
		
		// -------------------------------------------------------------------------------------------------------- 方法
		
		public function toString():String
		{
			return this.drop + "(" + this.tings + ")";
		}
	
		// -------------------------------------------------------------------------------------------------------- 函数
	
	}
}
